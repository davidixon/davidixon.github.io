---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.title }}</title>
        <link>{{ site.url }}</link>
		<description>{{ site.description }}</description>
        <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
        <atom:link href="http://commasplice.net/feed/" rel="self" type="application/rss+xml" />
		{% for post in site.posts limit:5 %}
		    {% if post.link %}
            <item>
            	<title>{{ post.title }} â†’</title>
            	<link>{{ post.link | escape }}</link>
            	<description>
            	    {{ post.content | xml_escape }}
            	    &lt;a href=&quot;{{ site.url }}{{ post.url }}&quot;&gt;&amp;#8225;&lt;/a&gt;
            	</description>
                <guid isPermaLink="false">{{ post.link | escape }}</guid>
            	<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>	
            </item>
            {% else %}
			<item>
				<title>{{ post.title }}</title>
				<link>{{ site.url }}{{ post.url }}</link>
                <description>{{ post.content | xml_escape }}</description>
                <guid isPermaLink="false">{{ site.url }}{{ post.url }}</guid>
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>
			</item>
			{% endif %}
		{% endfor %}
	</channel>
</rss>
